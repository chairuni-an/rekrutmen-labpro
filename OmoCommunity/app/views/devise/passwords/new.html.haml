.bal  
  %h1 Forgot Password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification
    = devise_error_messages!
    .form-inputs
      = f.label :"Username : "
      = f.input :username, required: true, label: false, input_html: { :size => 30 ,class: " teksbos"}, placeholder: "e.g. itiomocom"
    .form-actions
      .o
      = f.button :submit, "Send Reset Code", class: "buton"

:css
  .teksbos {
    border: none;
    background: #656161;
    height: 25px;
    padding-left: 10px;
    color: white;
  }
  ::-webkit-input-placeholder {
     color: #CCBDBD;
  }

  :-moz-placeholder { /* Firefox 18- */
     color: #CCBDBD;  
  }

  ::-moz-placeholder {  /* Firefox 19+ */
     color: #CCBDBD;  
  }

  :-ms-input-placeholder {  
     color: #CCBDBD;  
  }
  .bal {
    padding-left: 20px;
    padding-right: 20px;
    height:150%;
    overflow: hidden;
    font-family: 'Raleway', sans-serif;
    font-weight: 400;
    color: white;
    margin: -8px;
    overflow:hidden
  }
  .o {
    height: 10px;
  }
  .buton {
    padding-left: 15px;
    padding-right: 15px;
    padding-top : 5px;
    padding-bottom: 5px;
    border-radius: 5px;
    border:none; 
    background: #23A96F;
  }
  
  .buton:hover {
      background: #77a292
  }
